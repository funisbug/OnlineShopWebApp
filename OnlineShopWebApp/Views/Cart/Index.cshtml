@model CartViewModel

@if (Model == null || Model.Items.Count == 0)
{
    <div class="container text-center">
        <h3>Корзина пустая</h3>
    </div>    
}

else
{
<table class="table">
    <thead>
        <tr>
            <th scope="col">Название</th>
            <th scope="col" class="text-center">Цена, руб.</th>
            <th scope="col" class="text-center">Количество</th>
            <th scope="col" class="text-center">Стоимость</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td class="text-center">@item.Product.Cost</td>                    
                    <td class="text-center">
                        <div class="row">
                            <div class="col text-center">
                                <a class="btn btn-outline-danger" asp-controller="Cart" asp-action="Remove" asp-route-productId="@item.Product.Id">-</a>
                            </div>
                            <div class="col text-center">
                                @item.Amount
                            </div>
                            <div class="col text-center">
                                <a class="btn btn-outline-danger" asp-controller="Cart" asp-action="Add" asp-route-productId="@item.Product.Id">+</a>
                            </div>
                        </div>
                    </td>
                    <td class="text-center">@item.Cost</td>
                </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <th scope="row">Итого</th>
            <th scope="row"></th>
            <th scope="row"></th>
            <th scope="row"  class="text-center">@Model.Total</th>            
        </tr>
    </tfoot>
</table>
    
    <div class="container px-4 text-center">
        <div class="row">
            <div class="col">
                <a role="button" class="btn btn-outline-danger" asp-controller="Cart" asp-action="Clear">Очистить корзину</a>
            </div>
            <div class="col">
                <a role="button" class="btn btn-outline-danger" asp-controller="Order" asp-action="Index">Перейти к оформлению</a>
            </div>
            <div class="col">
                <a role="button" class="btn btn-outline-danger" asp-controller="Home" asp-action="Index">Продолжить покупки</a>
            </div>
        </div>
    </div>
}