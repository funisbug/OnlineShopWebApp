@model Registration

@{
    ViewData["Title"] = "Регистрация";
}

<div class="row justify-content-center">
    <div class="col-5 text-center">
        <form method="post">
            <div class="mb-4">
                <h2>Регистрация</h2>
            </div>
            <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
            @if (Model != null)
            {
                <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl">
            }
            <div class="mb-3">                
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="E-mail" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Пароль" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Подтвердите пароль" asp-for="RePassword">
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <button type="submit" class="btn btn-outline-danger w-50" asp-controller="Account" asp-action="SignUp">Зарегистрироваться</button>
            </div>
        </form>
    </div>
</div>