@model OrderDataViewModel

@{
    ViewData["Title"] = "Оформление заказа";
}

<div class="row text-center mb-4">
    <div class="col">
        <h3>Оформление заказа</h3>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-6">
        <form method="post">
            <div class="mb-3">
                <h5>Данные получателя</h5>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="ФИО*" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="E-mail*" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="Телефон*" asp-for="Phone">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="Адрес*" asp-for="Address">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="Комментрарий к заказу" asp-for="Comment">
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="text-center mb-2">
                <button type="submit" class="btn btn-outline-danger w-50" asp-controller="Order" asp-action="Successful">Оформить заказ</button>
            </div>
        </form>
    </div>
</div>