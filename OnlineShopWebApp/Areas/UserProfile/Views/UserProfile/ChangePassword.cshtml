@model Registration

@{
    ViewData["Title"] = "Личный кабинет";
}

<div class="row">
    <div class="col-md-3 my-4">
        @await Html.PartialAsync("LeftMenu")
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>@Model.Email</h4>                        
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form method="post">
                            <div class="text-danger offset-4 col-8" asp-validation-summary="All"></div>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Текущий пароль</label>
                                <div class="col-8">
                                    <input type="text" class="form-control" placeholder="Текущий пароль" asp-for="CurrentPassword">
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Новый пароль</label>
                                <div class="col-8">
                                    <input type="text" class="form-control" placeholder="Новый пароль" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Повторить новый пароль</label>
                                <div class="col-8">
                                    <input type="text" class="form-control" placeholder="Повторить новый пароль" asp-for="RePassword">
                                    <span asp-validation-for="RePassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="d-flex col-md-12">
                                    <div class="ml-auto">
                                        <input type="hidden" asp-for="Email" value="@Model.Email">
                                        <button type="submit" class="btn btn-outline-danger" asp-controller="UserProfile" asp-action="ChangePassword">Сохранить</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>