@model UserViewModel

@{
    ViewData["Title"] = "Личный кабинет";
}

<div class="row">
    <div class="col-md-3 my-4">
        @await Html.PartialAsync("LeftMenu")
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h4>@Model.Email</h4>                        
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Имя</label>
                                <div class="col-8">
                                    <input type="text" class="form-control" placeholder="@Model.Name" asp-for="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Телефон</label>
                                <div class="col-8">
                                    <input type="text" class="form-control" placeholder="@Model.PhoneNumber" asp-for="PhoneNumber">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Адрес</label>
                                <div class="col-8">
                                    <input type="text" class="form-control" placeholder="@Model.Adress" asp-for="Adress">
                                    <span asp-validation-for="Adress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Изменить фото</label>
                                <div class="col-8">
                                    <input type="file" class="form-control-file" asp-for="UploadedFile">
                                </div>
                            </div>
                            <div class="row">
                                <div class="d-flex col-md-12">
                                    <div class="ml-auto">
                                        <input type="hidden" asp-for="Email" value="@Model.Email">
                                        <button type="submit" class="btn btn-outline-danger" asp-controller="UserProfile" asp-action="Edit">Сохранить</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>