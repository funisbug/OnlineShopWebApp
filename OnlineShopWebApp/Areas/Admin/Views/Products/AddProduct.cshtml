@model ProductViewModel

@{
    ViewData["Title"] = "Добавить новый продукт";
}

<div class="row">
    <div class="col-md-3 my-4">
        @await Html.PartialAsync("LeftMenu")
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <div class="text-center mb-4">
                        <h2>Добавление нового продукта</h2>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Название</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Цена</label>
                        <input type="number" class="form-control" asp-for="Cost">
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Описание</label>
                        <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Загрузить изображение</label>
                        <input type="file" class="form-control-file" asp-for="UploadedFile">
                    </div>
                    <div class="text-center mb-3">
                        <button type="submit" class="btn btn-primary w-25" asp-controller="Products" asp-action="AddProduct">Добавить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

