@model UserViewModel

@{
    ViewData["Title"] = "Редактирование данных пользователя";
}

<div class="row">
    <div class="col-md-3 my-4">
        @await Html.PartialAsync("LeftMenu")
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div>
                    <h4>Пользователь @Model.Email</h4>
                </div>
                <form method="post">
                    <div class="mt-3">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>E-mail (логин):</td>
                                    <td>
                                        <input type="text" class="form-control" placeholder="@Model.Email" asp-for="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>ФИО:</td>
                                    <td>
                                        <input type="text" class="form-control" placeholder="@Model.Name" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Номер телефона:</td>
                                    <td>
                                        <input type="text" class="form-control" placeholder="@Model.PhoneNumber" asp-for="PhoneNumber">
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Адрес:</td>
                                    <td>
                                        <input type="text" class="form-control" placeholder="@Model.Adress" asp-for="Adress">
                                        <span asp-validation-for="Adress" class="text-danger"></span>
                                    </td>
                                </tr>
                                <input type="hidden" asp-for="Id" value="@Model.Id">
                            </tbody>
                        </table>
                    </div>
                    <div class="row mt-4 text-center">
                        <div class="col">
                            <button class="btn btn-primary" asp-controller="Users" asp-action="Index">Вернуться назад</button>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary" asp-controller="Users" asp-action="EditUser">Изменить</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>