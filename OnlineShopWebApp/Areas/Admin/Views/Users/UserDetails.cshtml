@model UserViewModel

@{
    ViewData["Title"] = "Данные пользователя";
}

<div class="row">
    <div class="col-md-3 my-4">
        @await Html.PartialAsync("LeftMenu")
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
        <div>
            <h4>Пользователь @Model.Email</h4>
        </div>
        <form method="post">
            <div class="mt-3">
                <table class="table">
                    <tbody>
                        <tr>
                            <td>E-mail:</td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td>ФИО:</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td>Номер телефона:</td>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <td>Адрес:</td>
                            <td>@Model.Adress</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row mt-4 text-center">
                <div class="col">
                    <button class="btn btn-primary" asp-controller="Users" asp-action="Index">Вернуться назад</button>
                </div>
                <div class="col">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-primary dropdown-toggle" id="dropdownMenu" data-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
                            Действия
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                            <a class="dropdown-item" asp-controller="Users" asp-action="ChangePassword" asp-route-email="@Model.Email">Смена пароля</a>
                            <a class="dropdown-item" asp-controller="Users" asp-action="EditUser" asp-route-email="@Model.Email">Редактирование данных</a>
                            <a class="dropdown-item" asp-controller="Users" asp-action="EditRole" asp-route-email="@Model.Email">Права доступа</a>
                            <a class="dropdown-item" asp-controller="Users" asp-action="RemoveUser" asp-route-email="@Model.Email">Удалить пользователя</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>