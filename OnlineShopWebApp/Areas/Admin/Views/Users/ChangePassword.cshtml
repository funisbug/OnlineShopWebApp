@model Registration

@{
    ViewData["Title"] = "Изменить пароль пользователя";
}

<div class="row">
    <div class="col-md-3 my-4">
        @await Html.PartialAsync("LeftMenu")
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div>
                    <h4>Пользователь @Model.Email</h4>
                </div>
                <form method="post">
                    <div class="mt-3">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>Новый пароль:</td>
                                    <td>
                                        <input type="text" class="form-control" asp-for="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Повторить новый пароль:</td>
                                    <td>
                                        <input type="text" class="form-control" asp-for="RePassword">
                                        <span asp-validation-for="RePassword" class="text-danger"></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row mt-4 text-center">
                        <div class="col">
                            <button class="btn btn-primary" asp-controller="Users" asp-action="Index">Вернуться назад</button>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary" asp-controller="Users" asp-action="ChangePassword" asp-route-email="@Model.Email">Изменить</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>        
    </div>
</div>