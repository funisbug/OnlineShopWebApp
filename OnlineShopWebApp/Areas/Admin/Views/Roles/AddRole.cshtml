@model RoleViewModel

@{
    ViewData["Title"] = "Добавить новую роль";
}

<div class="row">
    <div class="col-md-3 my-4">
        @await Html.PartialAsync("LeftMenu")
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="text-center mb-4">
                        <h2>Добавление новой роли</h2>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Название</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-25" asp-controller="Roles" asp-action="AddRole">Добавить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

