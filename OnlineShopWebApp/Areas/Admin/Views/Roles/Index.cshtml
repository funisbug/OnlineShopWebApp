@model List<RoleViewModel>
@{
    ViewData["Title"] = "Панель администратора - Роли";
}

<div class="row">
    <div class="col-md-3 my-4">
        @await Html.PartialAsync("LeftMenu")
    </div>
    <div class="col-md-9 my-4">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <h2>Роли</h2>
                </div>
                <div class="mt-3">
                    <a class="text" asp-controller="Roles" asp-action="AddRole">Добавить новую роль</a>
                </div>
                <div class="mt-3">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Название</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Name</td>
                                    <td><a class="text" asp-controller="Roles" asp-action="RemoveRole" asp-route-name="@role.Name">Удалить</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>        
    </div>
</div>